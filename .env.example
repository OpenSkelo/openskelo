# OpenSkelo Environment Configuration
# Copy to .env and customize as needed.

# ── Provider API Keys ──
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# ── Safety Limits ──
OPENSKELO_MAX_CONCURRENT_RUNS=2
OPENSKELO_MAX_RUN_DURATION_MS=1800000       # 30 minutes
OPENSKELO_MAX_BLOCK_DURATION_MS=600000      # 10 minutes
OPENSKELO_STALL_TIMEOUT_MS=300000           # 5 minutes
OPENSKELO_ORPHAN_TIMEOUT_MS=120000          # 2 minutes
OPENSKELO_MAX_RETRIES_CAP=2

# ── Shell Gates (disabled by default — security risk) ──
OPENSKELO_ALLOW_SHELL_GATES=false
OPENSKELO_SHELL_GATE_TIMEOUT_MS=10000       # 10 seconds

# ── API Configuration ──
OPENSKELO_API=http://localhost:4040
